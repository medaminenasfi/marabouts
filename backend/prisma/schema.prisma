generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  residences Residence[]
  createdTickets Ticket[] @relation("CreatedTickets")
  assignedTickets Ticket[] @relation("AssignedTickets")

  @@map("users")
}

model Residence {
  id          String   @id @default(cuid())
  name        String
  address     String
  city        String
  postalCode  String
  units       Int
  description String?
  createdAt   DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  managerId String?
  manager   User?   @relation(fields: [managerId], references: [id])
  tickets   Ticket[]

  @@unique([name, address, city])
  @@map("residences")
}

model Ticket {
  id          String      @id @default(cuid())
  title       String
  description String
  status      TicketStatus @default(OPEN)
  priority    Priority    @default(MEDIUM)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relations
  residenceId String
  residence   Residence @relation(fields: [residenceId], references: [id])
  createdBy   String
  creator     User @relation("CreatedTickets", fields: [createdBy], references: [id])
  assignedTo  String?
  assignee    User? @relation("AssignedTickets", fields: [assignedTo], references: [id])

  @@map("tickets")
}

enum UserRole {
  ADMIN
  MANAGER
  USER
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}
